<FileChooserContent@Popup>:
    file_chooser: file_chooser
    load_button: load_button

    BoxLayout:
        orientation: 'vertical'

        FileChooserIconView:
            id: file_chooser
            on_selection: root.load(file_chooser.selection)
            icon_folder: 'images/folder_icon.png'
            icon_file: 'images/file_icon_3.png'

        BoxLayout:
            height: 15
            size_hint: 0.4, 0.1
            spacing: 50
            pos_hint: {'center_x': 0.5}

            Button:
                id: load_button
                text: 'Load'
                on_press: root.load(file_chooser.selection)

            Button:
                text: 'Cancel'
                on_press: root.cancel()

<TickInputPopup@Popup>
    title: 'Enter coordinate'
    size_hint: (0.5, 0.5)

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        TextInput:
            id: tick_input_field
            hint_text: 'Type here'

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 30

            Button:
                text: 'Confirm'
                on_press: root.on_submit(tick_input_field.text)
                on_release: root.dismiss()

            Button:
                text: 'Cancel'
                on_release: root.dismiss()


<ResizeDropDown@DropDown>:
    auto_width: False
    width: 200

    Button:
        text: 'VGA 640x480'
        height: 50
        size_hint_y: None
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: root.select('vga')

    Button:
        text: 'HD 1280x720'
        height: 50
        size_hint_y: None
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: root.select('hd')


<MessagePopup@Popup>:
    title: ''
    message: ''
    auto_dismiss: False
    size_hint: (0.3, 0.3)

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            text: root.message
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        Button:
            text: 'Dismiss'
            size_hint_y: None
            height: 50
            on_release: root.dismiss()

<FileLoadPopup@FinderPopup>:
    icon_view: icon_view
    load_button: load_button
    size_hint: (0.8, 0.8)

    BoxLayout:
        orientation: 'vertical'

        FileChooserIconView:
            id: icon_view
            # filters: ['.*\.(png|PNG|jpg|JPG|jpeg|JPEG)$']
            on_selection: root.load(icon_view.selection)
            icon_folder: 'images/folder_icon.png'
            icon_file: 'images/file_icon_3.png'

        BoxLayout:
            size_hint: 0.4, 0.1
            spacing: 50
            pos_hint: {'center_x': 0.5}

            Button:
                id: load_button
                text: 'Load'
                on_press: root.load(icon_view.selection)

            Button:
                text: 'Cancel'
                on_press: root.dismiss()

<FileSavePopup@FinderPopup>:
    icon_view: icon_view
    # load_button: load_button
    size_hint: (0.8, 0.8)

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        TextInput:
            id: file_input_field
            hint_text: 'Enter file name'
            multiline: False
            size_hint: (1, 0.08)
            pos_hint: {'center_x': 0.5}

        FileChooserIconView:
            id: icon_view

        BoxLayout:
            size_hint: (0.4, 0.1)
            spacing: 50
            pos_hint: {'center_x': 0.5}

            Button:
                text: 'Create'
                on_press:
                    root.save(icon_view.path, file_input_field.text)
                on_release: root.dismiss()

            Button:
                text: 'Cancel'
                on_press: root.dismiss()

<TickInputPopup@Popup>
    title: 'Enter coordinate'
    size_hint: (0.25, 0.25)

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        TextInput:
            id: tick_input_field
            hint_text: 'Type here'

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 30

            Button:
                text: 'Confirm'
                on_press: root.on_submit(tick_input_field.text)
                on_release: root.dismiss()

            Button:
                text: 'Cancel'
                on_release: root.dismiss()


#:kivy 2.0.0
#:import kivy kivy

<MPLWidget>:
    layout: layout
    image: image
    scatter: scatter
    original_image_toggle: original_image_toggle

    FloatLayout:
        id: layout
        size: root.size
        padding: (10, 10, 10, 50)

        Background:
            id: background
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            color: 1, 1, 1, 1

        BoxLayout:
            padding: (20, 50, 20, 50)

            Scatter:
                id: scatter
                size_hint: None, None
                size: root.size
                do_rotation: False

                Image:
                    id: image
                    opacity: 1
                    size_hint: None, None
                    size: root.size

        BoxLayout:
            padding: 10
            spacing: 30
            pos_hint: {'top': 1}
            size_hint: None, None
            height: 120
            width: 800

            Button:
                id: load_image_button
                on_release: root.on_load_image_button_press()
                background_normal: 'images/new_file_icon_normal.png'
                background_down: 'images/new_file_icon_down.png'
                height: root.height
                width: 100
                border: 0, 0, 0, 0

            Button:
                id: bin_button
                on_release: root.clear_image_and_pipeline()
                background_normal: 'images/bin_icon_normal.png'
                background_down: 'images/bin_icon_down.png'
                height: root.height
                width: 100
                border: 0, 0, 0, 0

            Button:
                id: reduce_button
                on_release: root.reduce_dropdown.open(self)
                # on_release: root.reduce_dropdown.dismiss()
                background_normal: 'images/reduce_icon_normal.png'
                background_down: 'images/reduce_icon_down.png'
                height: root.height
                width: 100
                border: 0, 0, 0, 0

            Button:
                id: draw_button
                on_release: root.draw_dropdown.open(self)
                background_normal: 'images/draw_icon_normal.png'
                background_down: 'images/draw_icon_down.png'
                height: root.height
                width: 100
                border: 0, 0, 0, 0

            Button:
                id: tools_button
                on_release: root.tools_dropdown.open(self)
                background_normal: 'images/tools_icon_normal.png'
                background_down: 'images/tools_icon_down.png'
                height: root.height
                width: 100
                border: 0, 0, 0, 0

            Widget:
                size_hint: None, None
                width: 10
                height: 90
                canvas:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        points: self.center_x, self.y, self.center_x, self.top
                        width: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                width: 90
                height: 120

                ToggleButton:
                    id: original_image_toggle
                    background_normal: 'images/toggle_off_icon.png'
                    background_down: 'images/toggle_on_icon.png'
                    on_press: root.on_original_image_toggle_press()
                    state: 'down' if root.app.config.get('General', 'show_pipeline') == 'On' else 'normal'
                    height: 80
                    border: 0, 0, 0, 0

                Label:
                    text: 'Show\nPipeline'
                    size_hint_y: None
                    height: 40
                    halign: 'center'
                    valign: 'middle'
                    font_size: 24
                    color: 0, 0, 0, 1

        BoxLayout:
            spacing: 30
            pos_hint: {'center_x': 0.5, 'center_y': 0.05}
            size_hint: None, None
            height: 120
            width: 275

            Button:
                id: zoom_in_button
                on_release: root.zoom(1.1)
                background_normal: 'images/plus_icon_normal.png'
                background_down: 'images/plus_icon_down.png'
                width: 100
                border: 0, 0, 0, 0

            Button:
                id: zoom_out_button
                on_release: root.zoom(0.9)
                background_normal: 'images/minus_icon_normal.png'
                background_down: 'images/minus_icon_down.png'
                width: 100
                border: 0, 0, 0, 0

<FileChooserContent>:
    file_chooser: file_chooser
    load_button: load_button
    cancel_button: cancel_button

    BoxLayout:
        orientation: 'vertical'

        FileChooserIconView:
            id: file_chooser
            on_selection: root.load(file_chooser.selection)
            icon_folder: 'images/folder_icon.png'
            icon_file: 'images/file_icon_3.png'

        BoxLayout:
            height: 15
            size_hint: 0.4, 0.1
            spacing: 50
            pos_hint: {'center_x': 0.5}

            Button:
                id: load_button
                text: 'Load'
                on_press: root.load(file_chooser.selection)
            Button:
                id: cancel_button
                text: 'Cancel'
                on_press: root.cancel()

<ResizeDropDown>:
    auto_width: False
    width: 200

    Button:
        text: 'VGA 640x480'
        height: 50
        size_hint_y: None
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: root.select('vga')

    Button:
        text: 'HD 1280x720'
        height: 50
        size_hint_y: None
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: root.select('hd')

